---
import { ViewTransitions } from 'astro:transitions';
import { getLangFromUrl } from '@/i18n/utils';

import Body from '@/components/Body.astro';

interface Props {
  title: string;
  center?: boolean;
}

const { title, center } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="2FA Authenticator Extension" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.ico" />
    <title>{title}</title>

    <link rel="sitemap" href="/sitemap-index.xml" />

    <meta property="og:image" content="https://2fa-authenticator.cl/img/promotion-small.webp" />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="440" />
    <meta property="og:image:height" content="280" />
    <meta property="og:image:alt" content="logo" />
    <meta property="og:title" content="2FA Authenticator" />
    <meta property="og:description" content="2FA Authenticator Extension" />
    <meta property="og:url" content="https://2fa-authenticator.cl" />
    <meta property="og:site_name" content="2FA Authenticator Extension" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:locale:alternate" content="es_CL" />

    <ViewTransitions />
  </head>
  <Body center={center}>
    <slot />
  </Body>
</html>
